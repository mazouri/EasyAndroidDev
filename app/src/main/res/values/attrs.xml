<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MemoryStatusView">
        <!--title-->
        <attr name="titleName" format="string"/>
        <attr name="titleNameColor" format="color"/>
        <attr name="titleNameSize" format="dimension"/>
        <attr name="titleNameVisible">
            <flag name="visible" value="0x00"/>
            <flag name="gone" value="0x10"/>
            <flag name="invisible" value="0x20"/>
        </attr>

        <!--used value-->
        <attr name="memUsedValue" format="string"/>
        <attr name="memUsedValueColor" format="color"/>
        <attr name="memUsedValueSize" format="dimension"/>

        <!--total value-->
        <attr name="memTotalValue" format="string"/>
        <attr name="memTotalValueColor" format="color"/>
        <attr name="memTotalValueSize" format="dimension"/>

        <!--symbol-->
        <attr name="symbolColor" format="color"/>
        <attr name="bracketsVisible">
            <flag name="visible" value="0x00"/>
            <flag name="gone" value="0x10"/>
            <flag name="invisible" value="0x20"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CategoryCardView">
        <attr name="ccvTitle" format="string"/>
        <attr name="ccvTitleColor" format="color"/>
        <attr name="ccvTitleSize" format="dimension"/>

        <attr name="ccvCount" format="integer"/>
        <attr name="ccvCountColor" format="color"/>
        <attr name="ccvCountSize" format="dimension"/>

        <attr name="ccvIconSource" format="reference"/>
        <attr name="ccvBackground" format="reference"/>
    </declare-styleable>

    <declare-styleable name="StorageItemView">
        <attr name="sivTitle" format="string"/>
        <attr name="sivTitleColor" format="color"/>
        <attr name="sivTitleSize" format="dimension"/>

        <attr name="sivMemUsed" format="integer"/>
        <attr name="sivMemUsedColor" format="color"/>
        <attr name="sivMemUsedSize" format="dimension"/>

        <attr name="sivMemTotal" format="integer"/>
        <attr name="sivMemTotalColor" format="color"/>
        <attr name="sivMemTotalSize" format="dimension"/>

        <attr name="sivIconSource" format="reference"/>
        <attr name="sivBackground" format="reference"/>
        <attr name="sivProgress" format="integer"/>
    </declare-styleable>

    <declare-styleable name="StorageGridLayout">
        <attr name="sgHorizontalSpacing" format="dimension" />
        <attr name="sgVerticalSpacing" format="dimension" />
        <attr name="sgItemWidth" format="dimension" />
        <attr name="sgItemHeight" format="dimension" />

        <attr name="sgItemTitleColor" format="color"/>
        <attr name="sgItemTitleSize" format="dimension"/>

        <attr name="sgItemMemColor" format="color"/>
        <attr name="sgItemMemSize" format="dimension"/>
    </declare-styleable>
</resources>